for $color, $i in $colors
  .alert_type_outline.alert_theme_{$color} .alert__icon.alert__icon_type_fill
    background-color $color+"_normal"
    fill white
  .alert_type_outline.alert_theme_{$color} .alert__icon.alert__icon_type_fill .alert__triange
    border-color transparent transparent transparent $color+"_normal"
  .alert_type_outline.alert_theme_{$color} .alert__icon.alert__icon_type_outline
    background-color white
    fill $color+"_normal"
  .alert_type_fill.alert_theme_{$color} .alert__icon.alert__icon_type_fill, .alert_type_fill.alert_theme_{$color} .alert__icon.alert__icon_type_outline
    fill $color+"_text"
  .alert_type_fill.alert_theme_{$color}
    background $color+"_normal"
    color $color+"_text"
  .alert_type_outline.alert_theme_{$color}
    background white
    border 1px solid $color+"_normal"
    color $color+"_normal"
  .alert_type_fill.alert_theme_{$color} .alert__close
    fill white
  .alert_type_outline.alert_theme_{$color} .alert__close
    fill $color+"_normal"
