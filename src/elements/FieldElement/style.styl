@import "~@assets/theme/variables"
@import "~@assets/theme/mixins"



.field-element-padding-container
  position relative
  display inline-block
  font-size 0
  line-height 0
  letter-spacing -1px
  width 100%
  height 100%
.field-element-container
  display inline-block
  margin 100px
  border 1px solid black
  padding 3px
  font-size 0
  line-height 0
  letter-spacing -1px
  height auto
  max-width 100px
  min-width 100px
  overflow hidden
.field-element, .field-element__placeholder
  display inline-block
  height 1rem
  text-align left
  font-size 1rem
  line-height 1rem
  white-space nowrap
  min-width 100%
.field-element
  position relative
  z-index 2

.field-element__placeholder
  z-index 1
  position absolute
  top 0
  left 0




@import "./responsive/style"
